<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#CECECE"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        card_view:cardUseCompatPadding="true">


        <RelativeLayout
            android:id="@+id/single_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f0f0">

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/tripBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/dummy0"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    app:layout_marginPercent="0.5%"
                    app:layout_widthPercent="24%"
                    app:srcCompat="@drawable/icon_id" />

                <ImageView
                    android:id="@+id/dummy1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_toEndOf="@id/dummy0"
                    app:layout_marginPercent="0.5%"
                    app:layout_widthPercent="24%"
                    app:srcCompat="@drawable/icon_reason" />

                <ImageView
                    android:id="@+id/dummy2"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_toEndOf="@id/dummy1"
                    app:layout_marginPercent="0.5%"
                    app:layout_widthPercent="24%"
                    app:srcCompat="@drawable/icon_reward" />

                <ImageView
                    android:id="@+id/dummy3"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_toEndOf="@id/dummy2"
                    app:layout_marginPercent="0.5%"
                    app:layout_widthPercent="24%"
                    app:srcCompat="@drawable/icon_status" />

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/tripBar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripBar">

                <TextView
                    android:id="@+id/report_sID"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_marginPercent="0.5%"
                    app:layout_widthPercent="24%" />

                <TextView
                    android:id="@+id/report_reason"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/report_sID"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_marginPercent="0.5%"
                    app:layout_widthPercent="24%" />

                <TextView
                    android:id="@+id/report_reward"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/report_reason"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_marginPercent="0.5%"
                    app:layout_widthPercent="24%" />

                <TextView
                    android:id="@+id/report_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/report_reward"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_marginPercent="0.5%"
                    app:layout_widthPercent="24%" />

            </android.support.percent.PercentRelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>