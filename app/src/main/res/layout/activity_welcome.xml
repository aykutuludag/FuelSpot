<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_welcome"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            android:fontFamily="@font/gotham_black"
            android:text="@string/welcome_fuelspot"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/gotham_medium"
            android:gravity="center"
            android:text="@string/welcome_fuelspot_long"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonContinue"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/gotham_medium"
            android:gravity="center"
            android:text="@string/welcome_permission_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#fff" />

        <Button
            android:id="@+id/buttonContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/green_box"
            android:fontFamily="@font/gotham_medium"
            android:padding="4dp"
            android:text="@string/button_continue"
            android:textColor="#212121" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_doodle"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round_layout_white2"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/gotham_bold"
                android:text="@string/do_you_have_car"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#161616" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/green_box"
                android:padding="4dp"
                android:text="@string/yes"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#161616" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button6"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/orange_box"
                android:padding="4dp"
                android:text="@string/no_later"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#f1f1f1" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewCarHolder"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:src="@drawable/default_automobile" />

            <TextView
                android:id="@+id/textView_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewCarHolder"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/gotham_book"
                android:gravity="center"
                android:text="@string/brand"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#161616" />

            <Spinner
                android:id="@+id/spinner_brands"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_brand"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/round_layout_white2"
                android:padding="16dp" />

            <TextView
                android:id="@+id/textView_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner_brands"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="false"
                android:fontFamily="@font/gotham_book"
                android:gravity="center"
                android:text="@string/vehicle_model"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#161616" />

            <Spinner
                android:id="@+id/spinner_models"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_model"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/round_layout_white2"
                android:padding="16dp" />

            <RelativeLayout
                android:id="@+id/fuelTypeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner_models"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/round_layout_white2">

                <TextView
                    android:id="@+id/textView_fuelPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="@string/primary_fuel_type"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#161616" />

                <RadioGroup
                    android:id="@+id/radioGroup_fuelPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_fuelPrimary"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:orientation='horizontal'>

                    <RadioButton
                        android:id="@+id/gasoline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton"
                        android:fontFamily="@font/gotham_medium"
                        android:padding="8dp"
                        android:text="@string/gasoline"
                        android:textColor="#757575" />

                    <RadioButton
                        android:id="@+id/diesel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton"
                        android:fontFamily="@font/gotham_medium"
                        android:padding="8dp"
                        android:text="@string/diesel"
                        android:textColor="#757575" />

                    <RadioButton
                        android:id="@+id/lpg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton"
                        android:fontFamily="@font/gotham_medium"
                        android:padding="8dp"
                        android:text="@string/lpg"
                        android:textColor="#757575" />

                    <RadioButton
                        android:id="@+id/electricity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton"
                        android:fontFamily="@font/gotham_medium"
                        android:padding="8dp"
                        android:text="@string/electricity"
                        android:textColor="#757575" />
                </RadioGroup>

                <TextView
                    android:id="@+id/textView_fuelSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioGroup_fuelPrimary"
                    android:layout_alignStart="@+id/textView_fuelPrimary"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="@string/secondary_fuel_type"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#161616" />

                <TextView
                    android:id="@+id/textView_fuelSecondaryExp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_fuelSecondary"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="@string/secondary_fuel_type_desc"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#161616" />

                <RadioGroup
                    android:id="@+id/radioGroup_fuelSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_fuelSecondaryExp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:orientation='horizontal'>

                    <RadioButton
                        android:id="@+id/gasoline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton"
                        android:fontFamily="@font/gotham_medium"
                        android:padding="8dp"
                        android:text="@string/gasoline"
                        android:textColor="#757575" />

                    <RadioButton
                        android:id="@+id/diesel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton"
                        android:fontFamily="@font/gotham_medium"
                        android:padding="8dp"
                        android:text="@string/diesel"
                        android:textColor="#757575" />

                    <RadioButton
                        android:id="@+id/lpg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton"
                        android:fontFamily="@font/gotham_medium"
                        android:padding="8dp"
                        android:text="@string/lpg"
                        android:textColor="#757575" />

                    <RadioButton
                        android:id="@+id/electricity2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton"
                        android:fontFamily="@font/gotham_medium"
                        android:padding="8dp"
                        android:text="@string/electricity"
                        android:textColor="#757575" />
                </RadioGroup>

                <TextView
                    android:id="@+id/textView_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioGroup_fuelSecondary"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="@string/kilometer"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#161616" />

                <EditText
                    android:id="@+id/editText_km"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_km"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/gotham_medium"
                    android:gravity="center"
                    android:inputType="numberSigned|numberDecimal"
                    android:shadowColor="#3A3A3A"
                    android:textColor="#3A3A3A" />

                <TextView
                    android:id="@+id/textView_plate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editText_km"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="@string/plate_no"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#161616" />

                <EditText
                    android:id="@+id/editText_plate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_plate"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/gotham_medium"
                    android:gravity="center"
                    android:inputType="textCapCharacters"
                    android:shadowColor="#3A3A3A"
                    android:textAllCaps="true"
                    android:textColor="#3A3A3A" />
            </RelativeLayout>

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fuelTypeLayout"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/green_box"
                android:fontFamily="@font/gotham_medium"
                android:padding="4dp"
                android:text="@string/button_continue"
                android:textAllCaps="false"
                android:textColor="#212121" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_doodle"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/howto1"
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/round_layout_white"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/gotham_black"
                android:text="@string/fuel_symbols"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/percentHowTo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView11"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_below="@id/textView11"
                    android:layout_toStartOf="@+id/imageView15"
                    android:contentDescription="@string/gasoline"
                    android:padding="8dp"
                    app:layout_marginPercent="1%"
                    app:layout_widthPercent="18%"
                    app:srcCompat="@drawable/fuel_gasoline" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView14"
                    android:layout_alignStart="@+id/imageView14"
                    android:layout_alignEnd="@+id/imageView14"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/gotham_bold"
                    android:gravity="center"
                    android:text="@string/gasoline"
                    android:textAlignment="center"
                    android:textColor="#161616" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_below="@id/textView11"
                    android:layout_toStartOf="@id/imageView16"
                    android:contentDescription="@string/diesel"
                    android:padding="8dp"
                    app:layout_marginPercent="1%"
                    app:layout_widthPercent="18%"
                    app:srcCompat="@drawable/fuel_diesel" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView14"
                    android:layout_alignStart="@+id/imageView15"
                    android:layout_alignEnd="@+id/imageView15"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/gotham_bold"
                    android:gravity="center"
                    android:text="@string/diesel"
                    android:textAlignment="center"
                    android:textColor="#161616" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_below="@id/textView11"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/lpg"
                    android:padding="8dp"
                    app:layout_marginPercent="1%"
                    app:layout_widthPercent="18%"
                    app:srcCompat="@drawable/fuel_lpg" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView14"
                    android:layout_alignStart="@+id/imageView16"
                    android:layout_alignEnd="@id/imageView16"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/gotham_bold"
                    android:gravity="center"
                    android:text="@string/lpg"
                    android:textAlignment="center"
                    android:textColor="#161616" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_below="@id/textView11"
                    android:layout_toEndOf="@+id/imageView16"
                    android:contentDescription="@string/electricity"
                    android:padding="8dp"
                    app:layout_marginPercent="1%"
                    app:layout_widthPercent="18%"
                    app:srcCompat="@drawable/fuel_electricity" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView14"
                    android:layout_alignStart="@+id/imageView17"
                    android:layout_alignEnd="@+id/imageView17"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/gotham_bold"
                    android:gravity="center"
                    android:text="@string/electricity"
                    android:textAlignment="center"
                    android:textColor="#161616" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_below="@id/textView11"
                    android:layout_toEndOf="@+id/imageView17"
                    android:contentDescription="@string/distance"
                    android:padding="8dp"
                    app:layout_marginPercent="1%"
                    app:layout_widthPercent="18%"
                    app:srcCompat="@drawable/distance" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView6"
                    android:layout_alignStart="@+id/imageView6"
                    android:layout_alignEnd="@+id/imageView6"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/gotham_bold"
                    android:gravity="center"
                    android:text="@string/distance"
                    android:textAlignment="center"
                    android:textColor="#161616" />

            </androidx.percentlayout.widget.PercentRelativeLayout>

            <TextView
                android:id="@+id/how_tosortExp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/percentHowTo1"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/gotham_book"
                android:gravity="center"
                android:text="@string/how_to_sort"
                android:textColor="#161616" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageViewIndicator2"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/imageViewIndicator2"
                android:src="@drawable/radio_active" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewIndicator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="24dp"
                android:src="@drawable/radio_passive" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewIndicator3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageViewIndicator"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/imageViewIndicator2"
                android:src="@drawable/radio_passive" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/howto2"
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round_layout_white"
            android:visibility="gone">

            <TextView
                android:id="@+id/textViewOnayli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/gotham_black"
                android:text="@string/how_to_register_car"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_below="@+id/textViewOnayli"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/how_to_register_car"
                app:srcCompat="@drawable/howaddvehicle" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView19"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/gotham_book"
                android:gravity="center"
