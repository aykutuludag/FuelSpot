<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0"
    android:padding="16dp">

    <TextView
        android:id="@+id/dummyTextt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/gotham_bold"
        android:text="@string/add_answer"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#626262" />

    <EditText
        android:id="@+id/editTextAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dummyTextt"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:padding="16dp" />

    <Button
        android:id="@+id/buttonAddAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextAnswer"
        android:layout_alignStart="@+id/editTextAnswer"
        android:layout_alignEnd="@+id/editTextAnswer"
        android:layout_marginTop="16dp"
        android:background="#FF6838"
        android:text="@string/add_answer"
        android:textColor="#f0f0f0" />

    <ImageView
        android:id="@+id/imageViewClose"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/cancel"
        app:srcCompat="@drawable/cancel" />
</RelativeLayout>