<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_vehicle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/card_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/arac_card_background" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/car_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/photo_placeholder"
        app:civ_border_color="#EA6C34"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/carFullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/updateCarInfo"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="49dp"
        android:gravity="center"
        android:maxLength="25"
        android:text="Renault Symbol"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/car_fuelType"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignLeft="@+id/carFullname"
        android:layout_alignStart="@+id/carFullname"
        android:layout_below="@+id/carFullname"
        android:layout_marginTop="8dp"
        android:src="@drawable/gasoline"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <ImageView
        android:id="@+id/car_fuelType2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignLeft="@+id/carFullname"
        android:layout_alignStart="@+id/carFullname"
        android:layout_below="@+id/car_fuelType"
        android:src="@drawable/gasoline"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/car_fuelTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/car_fuelType"
        android:layout_alignTop="@+id/car_fuelType"
        android:layout_toEndOf="@+id/car_fuelType"
        android:layout_toRightOf="@+id/car_fuelType"
        android:gravity="center"
        android:text="Gasoline"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/car_fuelTypeText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/car_fuelType2"
        android:layout_below="@+id/car_fuelType"
        android:layout_toEndOf="@+id/car_fuelType"
        android:layout_toRightOf="@+id/car_fuelType"
        android:gravity="center"
        android:text="Gasoline"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/car_avgCons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/carFullname"
        android:layout_below="@+id/car_fuelType2"
        android:text="0.0 lt / 100 km"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/car_avgPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/car_avgCons"
        android:layout_below="@+id/car_avgCons"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="0 TL / 100 km"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/car_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/car_avgPrice"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@+id/car_avgPrice"
        android:text="0 km"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp" />

    <com.github.curioustechizen.ago.RelativeTimeTextView
        android:id="@+id/car_lastUpdated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/card_background"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <ImageView
        android:id="@+id/updateCarInfo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="6dp"
        android:src="@drawable/edit_icon" />

</RelativeLayout>