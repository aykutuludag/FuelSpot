<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_vehicle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EDEDED">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/car_picture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:src="@drawable/photo_placeholder"
        app:civ_border_color="#EA6C34"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/carFullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/car_picture"
        android:layout_toRightOf="@+id/car_picture"
        android:gravity="center"
        android:text="Renault Symbol"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/car_fuelType"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignLeft="@+id/carFullname"
        android:layout_alignStart="@+id/carFullname"
        android:layout_below="@+id/carFullname"
        android:layout_marginTop="4dp"
        android:padding="2dp"
        android:src="@drawable/gasoline"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <ImageView
        android:id="@+id/car_fuelType2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignLeft="@+id/carFullname"
        android:layout_alignStart="@+id/carFullname"
        android:layout_below="@+id/car_fuelType"
        android:layout_marginTop="2dp"
        android:src="@drawable/gasoline"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/car_fuelTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/car_fuelType"
        android:layout_alignTop="@+id/car_fuelType"
        android:layout_toEndOf="@+id/car_fuelType"
        android:layout_toRightOf="@+id/car_fuelType"
        android:gravity="center"
        android:text="Gasoline"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/car_fuelTypeText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/car_fuelType2"
        android:layout_below="@+id/car_fuelType"
        android:layout_toEndOf="@+id/car_fuelType"
        android:layout_toRightOf="@+id/car_fuelType"
        android:gravity="center"
        android:text="Gasoline"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/car_avgCons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/carFullname"
        android:layout_alignStart="@+id/carFullname"
        android:layout_below="@+id/car_fuelType2"
        android:layout_marginTop="4dp"
        android:text="0.0 lt / 100 km"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/car_avgPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/carFullname"
        android:layout_alignStart="@+id/carFullname"
        android:layout_below="@+id/car_avgCons"
        android:layout_marginTop="4dp"
        android:text="0 TL / 100 km"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/car_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/carFullname"
        android:layout_alignStart="@+id/carFullname"
        android:layout_below="@id/car_avgPrice"
        android:layout_marginTop="4dp"
        android:text="0 km"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp" />

    <com.github.curioustechizen.ago.RelativeTimeTextView
        android:id="@+id/car_lastUpdated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/car_picture"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <ImageView
        android:id="@+id/updateCarInfo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:src="@drawable/edit_icon" />

</RelativeLayout>