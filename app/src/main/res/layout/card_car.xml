<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_vehicle"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="#FF7439">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/car_picture"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/empty"
        app:civ_border_color="#EA6C34"
        android:layout_marginStart="8dp"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/car_kilometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/car_picture"
        android:layout_alignLeft="@+id/car_picture"
        android:layout_alignRight="@+id/car_picture"
        android:layout_alignStart="@+id/car_picture"
        android:layout_below="@+id/car_picture"
        android:gravity="center"
        android:text="146.000 km"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse" />

    <TextView
        android:id="@+id/carFullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/car_picture"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/car_picture"
        android:layout_toRightOf="@+id/car_picture"
        android:maxLength="25"
        android:text="Renault Symbol"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse" />

    <ImageView
        android:id="@+id/fuelTypeIndicator"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignLeft="@+id/carFullname"
        android:layout_alignStart="@+id/carFullname"
        android:layout_below="@+id/carFullname"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/profile_email" />

    <TextView
        android:id="@+id/car_fuelType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fuelTypeIndicator"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/fuelTypeIndicator"
        android:layout_toRightOf="@+id/fuelTypeIndicator"
        android:text="Gasoline, LPG"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

    <ImageView
        android:id="@+id/avgConsumptionIndicator"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignLeft="@+id/fuelTypeIndicator"
        android:layout_alignStart="@+id/fuelTypeIndicator"
        android:layout_below="@+id/fuelTypeIndicator"
        android:layout_marginTop="7dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/profile_location" />

    <TextView
        android:id="@+id/car_avgCons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avgConsumptionIndicator"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/avgConsumptionIndicator"
        android:layout_toRightOf="@+id/avgConsumptionIndicator"
        android:text="0.0 lt / 100 km"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

    <ImageView
        android:id="@+id/avgPriceIndicator"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignLeft="@+id/avgConsumptionIndicator"
        android:layout_alignStart="@+id/avgConsumptionIndicator"
        android:layout_below="@+id/avgConsumptionIndicator"
        android:layout_marginTop="7dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/profile_birthday" />

    <TextView
        android:id="@+id/car_avgPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avgPriceIndicator"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/avgPriceIndicator"
        android:layout_toRightOf="@+id/avgPriceIndicator"
        android:text="0 TL / 100 km"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

    <ImageView
        android:id="@+id/montlyCostIndicator"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignLeft="@+id/avgPriceIndicator"
        android:layout_alignStart="@+id/avgPriceIndicator"
        android:layout_below="@+id/car_avgPrice"
        android:layout_marginTop="7dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/profile_sex" />

    <TextView
        android:id="@+id/car_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/montlyCostIndicator"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/montlyCostIndicator"
        android:layout_toRightOf="@+id/montlyCostIndicator"
        android:text="0 km"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

    <ImageView
        android:id="@+id/lastUpdatedIndicator"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignLeft="@+id/montlyCostIndicator"
        android:layout_alignStart="@+id/montlyCostIndicator"
        android:layout_below="@+id/montlyCostIndicator"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/profile_email" />

    <com.github.curioustechizen.ago.RelativeTimeTextView
        android:id="@+id/car_lastUpdated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lastUpdatedIndicator"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/lastUpdatedIndicator"
        android:layout_toLeftOf="@+id/updateCarInfo"
        android:layout_toRightOf="@+id/lastUpdatedIndicator"
        android:layout_toStartOf="@+id/updateCarInfo"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"/>

    <ImageView
        android:id="@+id/updateCarInfo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="6dp"
        android:src="@drawable/edit_icon" />
</RelativeLayout>