<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/layout_automobile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/userRegularLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/header_vehicle"
                    android:layout_width="match_parent"
                    android:layout_height="324dp"
                    android:background="#EAEAEA">

                    <ImageView
                        android:id="@+id/updateCarInfo"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="@string/edit"
                        android:padding="4dp"
                        android:src="@drawable/edit" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/carPicture"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/default_automobile" />

                    <TextView
                        android:id="@+id/carFullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/carPicture"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/gotham_bold"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#161616" />

                    <android.support.percent.PercentRelativeLayout
                        android:id="@+id/carInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/carFullname"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp">

                        <RelativeLayout
                            android:id="@id/layout1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            app:layout_widthPercent="47.5%">

                            <TextView
                                android:id="@+id/automobile_plateNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="3dp"
                                android:fontFamily="@font/gotham_book"
                                android:maxLines="1"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="#161616" />

                            <TextView
                                android:id="@+id/automobile_consumption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/automobile_plateNo"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginBottom="4dp"
                                android:fontFamily="@font/gotham_book"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="#161616" />

                            <TextView
                                android:id="@+id/automobile_kilometer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/automobile_consumption"
                                android:layout_marginStart="3dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="3dp"
                                android:fontFamily="@font/gotham_book"
                                android:maxLines="1"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="#161616" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:gravity="start"
                            app:layout_widthPercent="47.5%">

                            <RelativeLayout
                                android:id="@+id/fuelTypeSection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="3dp">

                                <ImageView
                                    android:id="@+id/car_fuelType"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:contentDescription="@string/primary_fuel_type"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                                <TextView
                                    android:id="@+id/car_fuelTypeText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignTop="@+id/car_fuelType"
                                    android:layout_alignBottom="@+id/car_fuelType"
                                    android:layout_marginStart="2dp"
                                    android:layout_toEndOf="@+id/car_fuelType"
                                    android:fontFamily="@font/gotham_book"
                                    android:gravity="center"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="#161616" />

                                <ImageView
                                    android:id="@+id/car_fuelType2"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_marginStart="4dp"
                                    android:layout_toEndOf="@id/car_fuelTypeText"
                                    android:contentDescription="@string/secondary_fuel_type"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/car_fuelTypeText2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignTop="@+id/car_fuelType2"
                                    android:layout_alignBottom="@+id/car_fuelType2"
                                    android:layout_marginStart="2dp"
                                    android:layout_toEndOf="@+id/car_fuelType2"
                                    android:fontFamily="@font/gotham_book"
                                    android:gravity="center"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="#161616"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/automobile_priceCons"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/fuelTypeSection"
                                android:layout_marginStart="3dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="3dp"
                                android:fontFamily="@font/gotham_book"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="#161616" />


                            <TextView
                                android:id="@+id/automobile_emission"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/automobile_priceCons"
                                android:layout_marginStart="3dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="3dp"
                                android:fontFamily="@font/gotham_book"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="#161616" />
                        </RelativeLayout>

                    </android.support.percent.PercentRelativeLayout>

                    <com.github.curioustechizen.ago.RelativeTimeTextView
                        android:id="@+id/car_lastUpdated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/carInfo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/gotham_book"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#161616" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/containerPurchases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header_vehicle"
                    android:layout_marginTop="-24dp"
                    android:background="@drawable/round_layout"
                    android:elevation="8dp">

                    <TextView
                        android:id="@+id/purchaseTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/gotham_black"
                        android:gravity="center"
                        android:text="@string/user_purchases"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="#000000" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/purchaseView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/purchaseTitle" />

                    <Button
                        android:id="@+id/button_seeAllPurchases"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/purchaseView"
                        android:layout_centerInParent="true"
                        android:layout_margin="8dp"
                        android:background="@drawable/green_button"
                        android:fontFamily="@font/gotham_medium"
                        android:padding="4dp"
                        android:text="@string/see_all"
                        android:visibility="invisible" />

                    <RelativeLayout
                        android:id="@+id/noPurchaseLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/purchaseTitle"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/round_layout_white"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            android:text="@string/no_purchase_user"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                            android:textColor="#212121" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/errorImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView20"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:src="@drawable/error_nopurchase" />

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/errorImage"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            android:text="@string/no_purchase_note"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                            android:textColor="#424242"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/userNoCarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/dummy"
                    android:contentDescription="@string/add_vehicle" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>