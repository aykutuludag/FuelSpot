<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA">

    <RelativeLayout
        android:id="@+id/buyScreen1"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:background="@drawable/round_layout_white"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/textViewProductTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/gotham_black"
                android:text="ARAÇ KOKUSU"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/productPhoto"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/textViewProductTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:src="@drawable/default_profile" />

            <TextView
                android:id="@+id/urunfiyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productPhoto"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/gotham_bold"
                android:gravity="center"
                android:text="10 TL"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#161616" />

            <TextView
                android:id="@+id/urunaciklama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/urunfiyat"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/gotham_bold"
                android:gravity="center"
                android:text="Ürün açıklaması" />
        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageViewIndicator2"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/imageViewIndicator2"
            android:src="@drawable/radio_active" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewIndicator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:src="@drawable/radio_passive" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewIndicator3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageViewIndicator"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imageViewIndicator2"
            android:src="@drawable/radio_passive" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buyScreen2"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:background="@drawable/round_layout_white"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/receiverPhoto"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:src="@drawable/default_profile" />

            <TextView
                android:id="@+id/receiverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/receiverPhoto"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/gotham_book"
                android:gravity="center"
                android:text="@string/fullname"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#161616" />

            <TextView
                android:id="@+id/receiverMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/receiverName"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/gotham_book"
                android:text="@string/email"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#161616" />

            <TextView
                android:id="@+id/receiverPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/receiverMail"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/gotham_book"
                android:text="@string/phone"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#161616" />

            <TextView
                android:id="@+id/receiverAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/receiverPhone"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/gotham_book"
                android:text="@string/address"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#161616" />

            <TextView
                android:id="@+id/warning_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/receiverAddress"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Bilgilerinizde hata var ise lütfen ilerlemeden önce profilinizden düzenleyin. Yanlış-eksik adres bildirimleri sonucu ulaşmayan kargolardan FuelSpot sorumlu değildir." />
        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewIndicator11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageViewIndicator12"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/imageViewIndicator12"
            android:src="@drawable/radio_passive" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewIndicator12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:src="@drawable/radio_active" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewIndicator13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageViewIndicator12"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imageViewIndicator12"
            android:src="@drawable/radio_passive" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buyScreen3"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:background="@drawable/round_layout_white"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/textViewFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/gotham_black"
                android:text="ARAÇ KOKUSU"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/productPhotoFinal"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/textViewFinal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:src="@drawable/default_profile" />

            <TextView
                android:id="@+id/urunfiyatFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productPhotoFinal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/gotham_bold"
                android:gravity="center"
                android:text="10 TL" />

            <TextView
                android:id="@+id/finalPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/urunfiyatFinal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/gotham_bold"
                android:gravity="center"
                android:text="Satın alma sonrası 1.62 TL bakiyeniz kalacaktır. Satın almayı onaylıyor musunuz?" />
        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewIndicator4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageViewIndicator5"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/imageViewIndicator5"
            android:src="@drawable/radio_passive" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewIndicator5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:src="@drawable/radio_passive" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewIndicator6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageViewIndicator4"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imageViewIndicator5"
            android:src="@drawable/radio_active" />

    </RelativeLayout>

    <Button
        android:id="@+id/buttonProcessPurchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buyScreen1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/green_box"
        android:fontFamily="@font/gotham_medium"
        android:padding="4dp"
        android:text="@string/button_continue"
        android:textAllCaps="false"
        android:textColor="#212121" />

    <ImageView
        android:id="@+id/imageViewClose"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_above="@+id/buyScreen1"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="-32dp"
        android:contentDescription="@string/cancel"
        app:srcCompat="@drawable/cancel" />
</RelativeLayout>