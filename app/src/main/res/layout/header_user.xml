<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_user"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="#212121">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_picture"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/profile"
        app:civ_border_color="#EA6C34"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/user_picture"
        android:layout_alignLeft="@+id/user_picture"
        android:layout_alignRight="@+id/user_picture"
        android:layout_alignStart="@+id/user_picture"
        android:layout_below="@+id/user_picture"
        android:gravity="center"
        android:text="aykutuludag"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse" />

    <TextView
        android:id="@+id/userFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_picture"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/user_picture"
        android:layout_toRightOf="@+id/user_picture"
        android:maxLength="16"
        android:text="Aykut UludaÄŸ"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse" />

    <ImageView
        android:id="@+id/fuelTypeIndicator"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignLeft="@+id/userFullName"
        android:layout_alignStart="@+id/userFullName"
        android:layout_below="@+id/userFullName"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/profile_email" />

    <TextView
        android:id="@+id/profile_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fuelTypeIndicator"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/fuelTypeIndicator"
        android:layout_toRightOf="@+id/fuelTypeIndicator"
        android:text="aykutuludag1@gmail.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

    <ImageView
        android:id="@+id/avgConsumptionIndicator"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignLeft="@+id/fuelTypeIndicator"
        android:layout_alignStart="@+id/fuelTypeIndicator"
        android:layout_below="@+id/fuelTypeIndicator"
        android:layout_marginTop="7dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/profile_location" />

    <TextView
        android:id="@+id/profile_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avgConsumptionIndicator"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/avgConsumptionIndicator"
        android:layout_toRightOf="@+id/avgConsumptionIndicator"
        android:text="Ankara"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

    <ImageView
        android:id="@+id/montlyConsumptionIndicator"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignLeft="@+id/avgConsumptionIndicator"
        android:layout_alignStart="@+id/avgConsumptionIndicator"
        android:layout_below="@+id/avgConsumptionIndicator"
        android:layout_marginTop="7dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/profile_birthday" />

    <TextView
        android:id="@+id/userBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/montlyConsumptionIndicator"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/montlyConsumptionIndicator"
        android:layout_toRightOf="@+id/montlyConsumptionIndicator"
        android:text="01-05-1965"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

    <ImageView
        android:id="@+id/montlyCostIndicator"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignLeft="@+id/montlyConsumptionIndicator"
        android:layout_alignStart="@+id/montlyConsumptionIndicator"
        android:layout_below="@+id/userBirthday"
        android:layout_marginTop="7dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/profile_sex" />

    <TextView
        android:id="@+id/profile_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/montlyCostIndicator"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/montlyCostIndicator"
        android:layout_toRightOf="@+id/montlyCostIndicator"
        android:text="Male"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

    <ImageView
        android:id="@+id/lastUpdatedIndicator"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignLeft="@+id/montlyCostIndicator"
        android:layout_alignStart="@+id/montlyCostIndicator"
        android:layout_below="@+id/montlyCostIndicator"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/profile_email" />

    <TextView
        android:id="@+id/profile_CarName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lastUpdatedIndicator"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/lastUpdatedIndicator"
        android:layout_toRightOf="@+id/lastUpdatedIndicator"
        android:text="Renault Symbol"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

    <ImageView
        android:id="@+id/updateUserInfo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:src="@drawable/edit_icon" />
</RelativeLayout>