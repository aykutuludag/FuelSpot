<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/vehicle_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/vehicle_card"
        app:layout_heightPercent="33.33%"
        app:layout_widthPercent="100%" />

    <ImageView
        android:id="@+id/stations_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/vehicle_card"
        android:scaleType="fitXY"
        android:src="@drawable/stations_card"
        app:layout_heightPercent="33.33%"
        app:layout_widthPercent="100%" />

    <ImageView
        android:id="@+id/latest_news"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/stations_card"
        android:scaleType="fitXY"
        android:src="@drawable/latest_news"
        app:layout_heightPercent="33.34%"
        app:layout_widthPercent="100%" />

</android.support.percent.PercentRelativeLayout>