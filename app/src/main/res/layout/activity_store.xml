<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_doodle"
    tools:context=".StoreActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        tools:context=".StoreActivity"
        tools:showIn="@layout/activity_store">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout_account_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp">

                <androidx.percentlayout.widget.PercentRelativeLayout
                    android:id="@+id/account_info_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/magaza_header"
                        android:layout_width="0dp"
                        android:layout_height="180dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/magaza_big_header"
                        app:layout_marginEndPercent="2%"
                        app:layout_marginStartPercent="3%"
                        app:layout_widthPercent="45%" />

                    <TextView
                        android:id="@+id/textViewDummy4"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_below="@id/textView0"
                        android:layout_alignParentEnd="true"
                        android:gravity="bottom|center_horizontal"
                        android:text="@string/current_balance"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#161616"
                        app:layout_marginEndPercent="3%"
                        app:layout_marginStartPercent="2%"
                        app:layout_widthPercent="45%" />

                    <TextView
                        android:id="@+id/textViewCurrentBalance"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/textViewDummy4"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/gotham_black"
                        android:gravity="center_horizontal|top"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="#00E676"
                        app:layout_marginEndPercent="3%"
                        app:layout_marginStartPercent="2%"
                        app:layout_widthPercent="45%" />

                </androidx.percentlayout.widget.PercentRelativeLayout>

                <TextView
                    android:id="@+id/textView0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/account_info_header"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/banking_activities"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#161616" />

                <TextView
                    android:id="@+id/textViewDummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView0"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="@string/banking_activities_desc"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#161616" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bankingView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/textViewDummy"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textView07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bankingView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/legend"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#161616" />

                <TextView
                    android:id="@+id/textViewDummy2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView07"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="@string/banking_key_map"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#161616" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_account_info"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/store"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                    <RelativeLayout
                        android:id="@+id/double_range_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView1"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/white_box"
                        android:elevation="4dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/double_range_photo"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/store_2x" />

                        <TextView
                            android:id="@+id/textView388"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/double_range_photo"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:text="@string/double_range"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="#161616" />

                        <TextView
                            android:id="@+id/textView399"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView388"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="@font/gotham_book"
                            android:gravity="center"
                            android:text="@string/double_range_desc"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#161616" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textView399"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:weightSum="5">

                            <Button
                                android:id="@+id/buttonPurchaseRangeWithFP"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_weight="2"
                                android:background="@drawable/green_box"
                                android:fontFamily="@font/gotham_book"
                                android:text="@string/subs_2xrange_fp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="#161616" />

                            <TextView
                                android:id="@+id/textView3888"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/or"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="#161616" />

                            <Button
                                android:id="@+id/buttonPurchaseRange"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_weight="2"
                                android:background="@drawable/green_box"
                                android:fontFamily="@font/gotham_book"
                                android:text="@string/start_subscription"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="#161616" />

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/premium_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/double_range_layout"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/white_box"
                        android:elevation="4dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/premium_photo"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="4dp"
                            android:src="@drawable/store_premium" />

                        <TextView
                            android:id="@+id/textView38"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/premium_photo"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:text="@string/premium_version"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="#161616" />

                        <TextView
                            android:id="@+id/textView39"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView38"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="@font/gotham_book"
                            android:gravity="center"
                            android:text="@string/premium_version_desc"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#161616" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textView39"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:weightSum="5">

                            <Button
                                android:id="@+id/buttonPurchasePremiumWithFP"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_weight="2"
                                android:background="@drawable/green_box"
                                android:fontFamily="@font/gotham_book"
                                android:text="@string/subs_premium_fp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="#161616" />

                            <TextView
                                android:id="@+id/textView51"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/or"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="#161616" />

                            <Button
                                android:id="@+id/buttonPurchasePremium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_weight="2"
                                android:background="@drawable/green_box"
                                android:fontFamily="@font/gotham_book"
                                android:text="@string/start_subscription"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="#161616" />
                        </LinearLayout>
                    </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>