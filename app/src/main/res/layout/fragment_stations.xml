<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" />

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mapView"
        android:id="@+id/sortBar"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="#fff">

        <android.support.design.widget.TabItem
            android:id="@+id/itemGasoline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/gasoline"
            android:text="SIRALA" />

        <android.support.design.widget.TabItem
            android:id="@+id/itemDiesel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/diesel"
            android:text="SIRALA" />

        <android.support.design.widget.TabItem
            android:id="@+id/itemLPG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/lpg"
            android:text="SIRALA" />

        <android.support.design.widget.TabItem
            android:id="@+id/itemElectricity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/electricity"
            android:text="SIRALA" />

        <android.support.design.widget.TabItem
            android:id="@+id/itemDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/distance"
            android:text="SIRALA" />
    </android.support.design.widget.TabLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/feedView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sortBar"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent" />
</RelativeLayout>