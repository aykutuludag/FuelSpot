<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_picture"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/photo_placeholder"
        app:civ_border_color="#EA6C34"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/userFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_picture"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:gravity="center"
        android:text="Aykut Uludağ"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/updateUserInfo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="6dp"
        android:src="@drawable/edit" />

    <Button
        android:id="@+id/button_premium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userFullName"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/user_picture"
        android:layout_toStartOf="@+id/user_picture"
        android:background="@drawable/green_box"
        android:text="@string/buy_premium_ads_title" />

    <Button
        android:id="@+id/button_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userFullName"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_box"
        android:layout_marginTop="4dp"
        android:text="@string/privacy" />

    <Button
        android:id="@+id/button_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userFullName"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/user_picture"
        android:background="@drawable/white_box"
        android:layout_toRightOf="@+id/user_picture"
        android:text="@string/help" />

    <TextView
        android:id="@+id/viewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_premium"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:text="Son yorumlarınız"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/errorPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/swipeContainer"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/error_nocomment" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewTitle"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/commentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent" />
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>