<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDEDED">

        <include
            layout="@layout/card_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="285dp">

            <RelativeLayout
                android:id="@+id/accountLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/goPremiumLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/isUserPremiumLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotham_black"
                            android:gravity="center"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:text="Hesap türü:" />

                        <TextView
                            android:id="@+id/textView49"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/textView28"
                            android:layout_alignBottom="@id/textView28"
                            android:layout_marginStart="4dp"
                            android:layout_toEndOf="@id/textView28"
                            android:gravity="center"
                            android:text="Standart" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/whyPremium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/isUserPremiumLayout"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:text="Premium sürüme geçerek uygulama içerisindeki tüm reklamları kaldırabilirsiniz." />

                    <Button
                        android:id="@+id/button_premium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/whyPremium"
                        android:layout_centerInParent="true"
                        android:layout_margin="8dp"
                        android:background="@drawable/green_box"
                        android:fontFamily="@font/gotham_black"
                        android:text="@string/buy_premium_ads_title" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/commentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/accountLayout"
                android:background="@drawable/round_layout">

                <TextView
                    android:id="@+id/titleComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/comments"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
                    android:textColor="#212121" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/commentView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titleComment" />

                <Button
                    android:id="@+id/button_seeAllComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/commentView"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/green_box"
                    android:fontFamily="@font/gotham_black"
                    android:text="@string/see_all"
                    android:visibility="invisible" />

                <RelativeLayout
                    android:id="@+id/noCommentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/titleComment"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="Henüz hiç yorum yazmamışsınız. Yazdığınız yorumlar ve istasyon sahibinden gelen cevapları burada görebilirsin..."
                        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/errorPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView20"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:src="@drawable/error_nocomment" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>