<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header_profile"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#F01B1B">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/renault"
            app:civ_border_color="#EA6C34"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/profile_pic"
            android:layout_alignLeft="@+id/profile_pic"
            android:layout_alignRight="@+id/profile_pic"
            android:layout_alignStart="@+id/profile_pic"
            android:layout_below="@+id/profile_pic"
            android:gravity="center"
            android:text="Renault Symbol"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/profile_pic"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/profile_pic"
            android:layout_toRightOf="@+id/profile_pic"
            android:maxLength="16"
            android:text="145.500 km"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ImageView
            android:id="@+id/indicator_mail"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignLeft="@+id/profile_name"
            android:layout_alignStart="@+id/profile_name"
            android:layout_below="@+id/profile_name"
            android:layout_marginTop="7dp"
            app:srcCompat="@drawable/profile_email" />

        <TextView
            android:id="@+id/profile_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/indicator_mail"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/indicator_mail"
            android:layout_toRightOf="@+id/indicator_mail"
            android:text="Gasoline, LPG"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <ImageView
            android:id="@+id/indicator_loc"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignLeft="@+id/indicator_mail"
            android:layout_alignStart="@+id/indicator_mail"
            android:layout_below="@+id/indicator_mail"
            android:layout_marginTop="7dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/profile_location" />

        <TextView
            android:id="@+id/profile_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/indicator_loc"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/indicator_loc"
            android:layout_toRightOf="@+id/indicator_loc"
            android:text="5.2 lt / 100 km"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <ImageView
            android:id="@+id/indicator_birthday"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignLeft="@+id/indicator_loc"
            android:layout_alignStart="@+id/indicator_loc"
            android:layout_below="@+id/indicator_loc"
            android:layout_marginTop="7dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/profile_birthday" />

        <TextView
            android:id="@+id/profile_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/indicator_birthday"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/indicator_birthday"
            android:layout_toRightOf="@+id/indicator_birthday"
            android:text="60 lt / month"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <ImageView
            android:id="@+id/indicator_gender"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignLeft="@+id/indicator_birthday"
            android:layout_alignStart="@+id/indicator_birthday"
            android:layout_below="@+id/profile_birthday"
            android:layout_marginTop="7dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/profile_sex" />

        <TextView
            android:id="@+id/profile_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/indicator_gender"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/indicator_gender"
            android:layout_toRightOf="@+id/indicator_gender"
            android:text="300 TL / month"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <ImageView
            android:id="@+id/indicator_car"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignLeft="@+id/indicator_gender"
            android:layout_alignStart="@+id/indicator_gender"
            android:layout_below="@+id/indicator_gender"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/profile_email" />

        <TextView
            android:id="@+id/profile_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/indicator_car"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/indicator_car"
            android:layout_toRightOf="@+id/indicator_car"
            android:text="Last updated: 19-03-2018 22:36"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <ImageView
            android:id="@+id/editIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:src="@drawable/edit_icon" />
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:background="#CECECE">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/feedView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>