<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/single_station"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#90EDEDED">

            <ImageView
                android:id="@+id/station_photo"
                android:layout_height="60dp"
                android:layout_below="@+id/gasoline"
                android:layout_alignParentStart="true"
                android:padding="4dp"
                card_view:layout_widthPercent="12%"
                card_view:srcCompat="@drawable/default_station" />

            <TextView
                android:id="@+id/station_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/station_photo"
                android:layout_alignBottom="@+id/station_photo"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/station_photo"
                android:fontFamily="@font/gotham_black"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                card_view:layout_widthPercent="17.5%" />

            <TextView
                android:id="@+id/station_vicinity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/station_photo"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#6D6D6D"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/gasoline"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/station_name"
                android:padding="4dp"
                android:src="@drawable/gasoline"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                card_view:layout_widthPercent="14%" />

            <TextView
                android:id="@+id/taxGasoline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gasoline"
                android:layout_alignEnd="@+id/gasoline"
                android:layout_alignBottom="@+id/station_photo"
                android:layout_toEndOf="@+id/station_name"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#6D6D6D"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/diesel"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/gasoline"
                android:gravity="center"
                android:padding="4dp"
                android:src="@drawable/diesel"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                card_view:layout_widthPercent="14%" />

            <TextView
                android:id="@+id/taxDiesel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/diesel"
                android:layout_alignEnd="@+id/diesel"
                android:layout_alignBottom="@+id/station_photo"
                android:layout_toEndOf="@+id/taxGasoline"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#6D6D6D"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/lpg"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/diesel"
                android:padding="4dp"
                android:src="@drawable/lpg"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                card_view:layout_widthPercent="14%" />

            <TextView
                android:id="@+id/TaxLPG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lpg"
                android:layout_alignEnd="@+id/lpg"
                android:layout_alignRight="@+id/lpg"
                android:layout_alignBottom="@+id/station_photo"
                android:layout_toEndOf="@+id/taxDiesel"
                android:layout_toRightOf="@+id/taxDiesel"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#6D6D6D"
                android:textSize="13sp"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/electricity"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/lpg"
                android:padding="4dp"
                android:src="@drawable/electricity"
                card_view:layout_widthPercent="14%" />

            <TextView
                android:id="@+id/TaxElectricity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/electricity"
                android:layout_alignEnd="@+id/electricity"
                android:layout_alignBottom="@+id/station_photo"
                android:layout_toEndOf="@+id/TaxLPG"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#6D6D6D"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/distance"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/electricity"
                android:padding="4dp"
                android:src="@drawable/distance"
                card_view:layout_widthPercent="14%" />

            <TextView
                android:id="@+id/distance_ofStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/distance"
                android:layout_alignEnd="@+id/distance"
                android:layout_alignBottom="@+id/station_photo"
                android:layout_toEndOf="@+id/TaxElectricity"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#6D6D6D"
                android:textSize="12sp" />

            <com.github.curioustechizen.ago.RelativeTimeTextView
                android:id="@+id/stationLastUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/gasoline"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/gasoline"
                android:fontFamily="@font/gotham_book"
                android:gravity="center"
                android:padding="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="12sp" />
        </android.support.percent.PercentRelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>