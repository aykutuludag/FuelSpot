<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="4dp"
        card_view:cardCornerRadius="24dp"
        card_view:cardElevation="2dp">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/single_station"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/baseInfoLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stationLastUpdate"
                android:layout_marginBottom="16dp"
                card_view:layout_marginEndPercent="1%"
                card_view:layout_marginStartPercent="2%"
                card_view:layout_widthPercent="17%">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/station_photo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/default_station" />

                <TextView
                    android:id="@+id/station_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/station_photo"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/gotham_black"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#141414" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/gasoline"
                android:layout_height="25dp"
                android:layout_below="@+id/stationLastUpdate"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/baseInfoLayout"
                android:padding="4dp"
                android:src="@drawable/gasoline"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                card_view:layout_marginEndPercent="1%"
                card_view:layout_marginStartPercent="1%"
                android:contentDescription="@string/gasoline"
                card_view:layout_widthPercent="14%" />

            <TextView
                android:id="@+id/priceGasoline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gasoline"
                android:layout_alignStart="@id/gasoline"
                android:layout_alignEnd="@id/gasoline"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#212121" />

            <ImageView
                android:id="@+id/diesel"
                android:layout_height="25dp"
                android:layout_below="@+id/stationLastUpdate"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/gasoline"
                android:gravity="center"
                android:padding="4dp"
                android:src="@drawable/diesel"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                card_view:layout_marginEndPercent="1%"
                card_view:layout_marginStartPercent="1%"
                android:contentDescription="@string/diesel"
                card_view:layout_widthPercent="14%" />

            <TextView
                android:id="@+id/priceDiesel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/diesel"
                android:layout_alignStart="@id/diesel"
                android:layout_alignEnd="@id/diesel"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#212121" />

            <ImageView
                android:id="@+id/lpg"
                android:layout_height="25dp"
                android:layout_below="@+id/stationLastUpdate"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/diesel"
                android:padding="4dp"
                android:src="@drawable/lpg"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                card_view:layout_marginEndPercent="1%"
                card_view:layout_marginStartPercent="1%"
                android:contentDescription="@string/lpg"
                card_view:layout_widthPercent="14%" />

            <TextView
                android:id="@+id/priceLPG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lpg"
                android:layout_alignStart="@id/lpg"
                android:layout_alignEnd="@id/lpg"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#212121" />

            <ImageView
                android:id="@+id/electricity"
                android:layout_height="25dp"
                android:layout_below="@+id/stationLastUpdate"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/lpg"
                android:padding="4dp"
                android:src="@drawable/electricity"
                card_view:layout_marginEndPercent="1%"
                card_view:layout_marginStartPercent="1%"
                android:contentDescription="@string/electricity"
                card_view:layout_widthPercent="14%" />

            <TextView
                android:id="@+id/priceElectricity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/electricity"
                android:layout_alignStart="@id/electricity"
                android:layout_alignEnd="@id/electricity"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#212121" />

            <ImageView
                android:id="@+id/distance"
                android:layout_height="25dp"
                android:layout_below="@+id/stationLastUpdate"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/electricity"
                android:padding="4dp"
                android:src="@drawable/distance"
                card_view:layout_marginEndPercent="1%"
                card_view:layout_marginStartPercent="1%"
                android:contentDescription="@string/distance"
                card_view:layout_widthPercent="14%" />

            <TextView
                android:id="@+id/distance_ofStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/distance"
                android:layout_alignStart="@id/distance"
                android:layout_alignEnd="@id/distance"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#212121" />

            <com.github.curioustechizen.ago.RelativeTimeTextView
                android:id="@+id/stationLastUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/gotham_book"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />
        </android.support.percent.PercentRelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>