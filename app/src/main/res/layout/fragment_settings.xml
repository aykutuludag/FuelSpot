<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedScrollViewSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/settings_general"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/round_layout_white">

            <TextView
                android:id="@+id/textView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:text="@string/settings"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/userGen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView01">

                <TextView
                    android:id="@+id/dummy001"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/country"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#424242"
                    android:textSize="12sp"
                    app:layout_marginPercent="1%"
                    app:layout_widthPercent="24%" />


                <TextView
                    android:id="@+id/dummy002"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/dummy001"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/language"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#424242"
                    android:textSize="12sp"
                    app:layout_marginPercent="1%"
                    app:layout_widthPercent="24%" />


                <TextView
                    android:id="@+id/dummy003"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/dummy002"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/currency"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#424242"
                    android:textSize="12sp"
                    app:layout_marginPercent="1%"
                    app:layout_widthPercent="24%" />


                <TextView
                    android:id="@+id/dummy004"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/dummy003"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/units"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#424242"
                    android:textSize="12sp"
                    app:layout_marginPercent="1%"
                    app:layout_widthPercent="24%" />

                <TextView
                    android:id="@+id/textViewCountryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dummy001"
                    android:layout_alignStart="@id/dummy001"
                    android:layout_alignEnd="@id/dummy001"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textViewLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dummy002"
                    android:layout_alignStart="@id/dummy002"
                    android:layout_alignEnd="@id/dummy002"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textViewCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dummy003"
                    android:layout_alignStart="@id/dummy003"
                    android:layout_alignEnd="@id/dummy003"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textViewUnitSystem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dummy004"
                    android:layout_alignStart="@id/dummy004"
                    android:layout_alignEnd="@id/dummy004"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textViewVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewCountryName"
                    android:layout_centerHorizontal="true"
                    android:padding="4dp"
                    android:text="@string/appVersion"
                    android:textColor="#424242" />
            </android.support.percent.PercentRelativeLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/settings_geofence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settings_general"
            android:layout_margin="8dp"
            android:background="@drawable/round_layout_white">

            <TextView
                android:id="@+id/titleGeofence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:text="@string/location_notifications"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleGeofence"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:text="@string/location_notifications" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkBox"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:text="@string/location_notifications_desc" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/settings_tax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settings_geofence"
            android:layout_margin="8dp"
            android:background="@drawable/round_layout_white">

            <TextView
                android:id="@+id/textView114"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:text="@string/tax"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/single_tax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView114">

                <ImageView
                    android:id="@+id/gasoline"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/gasoline"
                    android:padding="5dp"
                    android:src="@drawable/gasoline"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="12sp"
                    app:layout_widthPercent="25%" />

                <TextView
                    android:id="@+id/priceGasoline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gasoline"
                    android:layout_alignStart="@+id/gasoline"
                    android:layout_alignEnd="@+id/gasoline"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#6D6D6D"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/diesel"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/gasoline"
                    android:contentDescription="@string/diesel"
                    android:gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/diesel"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="12sp"
                    app:layout_widthPercent="25%" />

                <TextView
                    android:id="@+id/priceDiesel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/diesel"
                    android:layout_alignEnd="@+id/diesel"
                    android:layout_toEndOf="@+id/priceGasoline"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#6D6D6D"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/lpg"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/diesel"
                    android:contentDescription="@string/lpg"
                    android:padding="5dp"
                    android:src="@drawable/lpg"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="12sp"
                    app:layout_widthPercent="25%" />

                <TextView
                    android:id="@+id/priceLPG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lpg"
                    android:layout_alignEnd="@+id/lpg"
                    android:layout_toEndOf="@+id/priceDiesel"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#6D6D6D"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/electricity"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/lpg"
                    android:contentDescription="@string/electricity"
                    android:padding="5dp"
                    android:src="@drawable/electricity"
                    app:layout_widthPercent="25%" />

                <TextView
                    android:id="@+id/priceElectricity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/electricity"
                    android:layout_alignEnd="@+id/electricity"
                    android:layout_toEndOf="@+id/priceLPG"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#6D6D6D"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </android.support.percent.PercentRelativeLayout>

            <Button
                android:id="@+id/button_tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/single_tax"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:text="@string/update_tax_rates" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/statsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settings_tax"
            android:layout_margin="8dp"
            android:background="@drawable/round_layout_white">

            <TextView
                android:id="@+id/title_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/stats"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart3"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_below="@id/title_stats"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewtoplamSayi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/chart3"
                android:layout_centerHorizontal="true"
                android:padding="2dp"
                android:text="@string/registered_station_number"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/settings_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statsLayout"
            android:layout_margin="8dp"
            android:background="@drawable/round_layout_white">

            <TextView
                android:id="@+id/textView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:text="@string/other"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#212121"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView04"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="@string/feedback" />

            <Button
                android:id="@+id/button_beta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_feedback"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="@string/enroll_beta" />

            <Button
                android:id="@+id/button_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_beta"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="@string/rate_app" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_rate"
                android:layout_margin="8dp"
                android:padding="4dp"
                android:text="@string/terms_and_agreements"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_rate"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:padding="4dp"
                android:text="@string/privacy"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#000000" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settings_other"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/copyright_text"
            android:textColor="#212121" />

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>