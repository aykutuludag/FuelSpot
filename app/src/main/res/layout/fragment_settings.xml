<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/settings_general"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/round_layout_white">

            <TextView
                android:id="@+id/textView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:text="Genel ayarlar"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/userGen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView01">

                <TextView
                    android:id="@+id/dummy001"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Ülke"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#424242"
                    android:textSize="12sp"
                    app:layout_marginPercent="1%"
                    app:layout_widthPercent="24%" />


                <TextView
                    android:id="@+id/dummy002"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/dummy001"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Dil"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#424242"
                    android:textSize="12sp"
                    app:layout_marginPercent="1%"
                    app:layout_widthPercent="24%" />


                <TextView
                    android:id="@+id/dummy003"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/dummy002"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Para birimi"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#424242"
                    android:textSize="12sp"
                    app:layout_marginPercent="1%"
                    app:layout_widthPercent="24%" />


                <TextView
                    android:id="@+id/dummy004"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/dummy003"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Ölçü sistemi"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#424242"
                    android:textSize="12sp"
                    app:layout_marginPercent="1%"
                    app:layout_widthPercent="24%" />

                <TextView
                    android:id="@+id/textViewCountryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dummy001"
                    android:layout_alignStart="@id/dummy001"
                    android:layout_alignEnd="@id/dummy001"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textViewLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dummy002"
                    android:layout_alignStart="@id/dummy002"
                    android:layout_alignEnd="@id/dummy002"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textViewCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dummy003"
                    android:layout_alignStart="@id/dummy003"
                    android:layout_alignEnd="@id/dummy003"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textViewUnitSystem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dummy004"
                    android:layout_alignStart="@id/dummy004"
                    android:layout_alignEnd="@id/dummy004"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="#000000" />

            </android.support.percent.PercentRelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/settings_tax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settings_general"
            android:layout_margin="8dp"
            android:background="@drawable/round_layout_white">

            <TextView
                android:id="@+id/textView114"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:text="Vergi"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/single_tax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView114">

                <ImageView
                    android:id="@+id/gasoline"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:padding="5dp"
                    android:src="@drawable/gasoline"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="12sp"
                    app:layout_widthPercent="25%" />

                <TextView
                    android:id="@+id/taxGasoline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gasoline"
                    android:layout_alignStart="@+id/gasoline"
                    android:layout_alignEnd="@+id/gasoline"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="53 %"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#6D6D6D"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/diesel"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/gasoline"
                    android:gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/diesel"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="12sp"
                    app:layout_widthPercent="25%" />

                <TextView
                    android:id="@+id/taxDiesel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/diesel"
                    android:layout_alignEnd="@+id/diesel"
                    android:layout_toEndOf="@+id/taxGasoline"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="51 %"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#6D6D6D"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/lpg"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/diesel"
                    android:padding="5dp"
                    android:src="@drawable/lpg"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="12sp"
                    app:layout_widthPercent="25%" />

                <TextView
                    android:id="@+id/taxLPG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lpg"
                    android:layout_alignEnd="@+id/lpg"
                    android:layout_toEndOf="@+id/taxDiesel"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="45 %"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#6D6D6D"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/electricity"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/lpg"
                    android:padding="5dp"
                    android:src="@drawable/electricity"
                    app:layout_widthPercent="25%" />

                <TextView
                    android:id="@+id/taxElectric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/electricity"
                    android:layout_alignEnd="@+id/electricity"
                    android:layout_toEndOf="@+id/taxLPG"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="30 %"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#6D6D6D"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </android.support.percent.PercentRelativeLayout>

            <Button
                android:id="@+id/button_tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/single_tax"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:text="VERGİ ORANLARINI GÜNCELLE" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/statsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settings_tax"
            android:layout_margin="8dp"
            android:background="@drawable/round_layout_white">

            <TextView
                android:id="@+id/title_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="İstatistikler"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart3"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_below="@id/title_stats"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewonayliSayi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/chart3"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="Onaylı istasyon sayısı: "
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textViewtoplamSayi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewonayliSayi"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="Kayıtlı istasyon sayısı: "
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/settings_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statsLayout"
            android:layout_margin="8dp"
            android:background="@drawable/round_layout_white">

            <TextView
                android:id="@+id/textView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:text="Diğer"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#212121"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView04"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="FEEDBACK" />

            <Button
                android:id="@+id/button_beta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_feedback"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="BETA TESTİNE KATIL" />

            <Button
                android:id="@+id/button_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_beta"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="RATE THE APP" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settings_other"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="FuelSpot 2019 - Made with ♥ in Ankara"
            android:textColor="#212121" />

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>