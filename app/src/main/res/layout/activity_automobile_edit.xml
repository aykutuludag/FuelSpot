<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_doodle"
    tools:context=".AutomobileEditActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewCar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:src="@drawable/default_automobile" />

            <TextView
                android:id="@+id/textView_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewCar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/gotham_book"
                android:gravity="center"
                android:text="@string/brand"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#161616" />

            <Spinner
                android:id="@+id/spinner_brands"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_brand"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/round_layout_white2"
                android:padding="16dp" />

            <TextView
                android:id="@+id/textView_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner_brands"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="false"
                android:fontFamily="@font/gotham_book"
                android:gravity="center"
                android:text="@string/vehicle_model"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#161616" />

            <Spinner
                android:id="@+id/spinner_models"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_model"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/round_layout_white2"
                android:padding="16dp" />

            <RelativeLayout
                android:id="@+id/fuelTypeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner_models"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/round_layout_white2">

                <TextView
                    android:id="@+id/textView_fuelPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="@string/primary_fuel_type"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#161616" />

                <RadioGroup
                    android:id="@+id/radioGroup_fuelPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_fuelPrimary"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:orientation='horizontal'>

                    <RadioButton
                        android:id="@+id/gasoline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton"
                        android:fontFamily="@font/gotham_medium"
                        android:padding="8dp"
                        android:text="@string/gasoline"
                        android:textColor="#757575" />

                    <RadioButton
                        android:id="@+id/diesel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton"
                        android:fontFamily="@font/gotham_medium"
                        android:padding="8dp"
                        android:text="@string/diesel"
                        android:textColor="#757575" />

                    <RadioButton
                        android:id="@+id/lpg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton"
                        android:fontFamily="@font/gotham_medium"
                        android:padding="8dp"
                        android:text="@string/lpg"
                        android:textColor="#757575" />

                    <RadioButton
                        android:id="@+id/electricity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton"
                        android:fontFamily="@font/gotham_medium"
                        android:padding="8dp"
                        android:text="@string/electricity"
                        android:textColor="#757575" />
                </RadioGroup>

                <TextView
                    android:id="@+id/textView_fuelSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioGroup_fuelPrimary"
                    android:layout_alignStart="@+id/textView_fuelPrimary"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="@string/secondary_fuel_type"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#161616" />

                <TextView
                    android:id="@+id/textView_fuelSecondaryExp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_fuelSecondary"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="4dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:text="@string/secondary_fuel_type_desc"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <RadioGroup
                    android:id="@+id/radioGroup_fuelSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_fuelSecondaryExp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:orientation='horizontal'>

                    <RadioButton
                        android:id="@+id/gasoline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton"
                        android:fontFamily="@font/gotham_medium"
                        android:padding="8dp"
                        android:text="@string/gasoline"
                        android:textColor="#757575" />

                    <RadioButton
                        android:id="@+id/diesel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton"
                        android:fontFamily="@font/gotham_medium"
                        android:padding="8dp"
                        android:text="@string/diesel"
                        android:textColor="#757575" />

                    <RadioButton
                        android:id="@+id/lpg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton"
                        android:fontFamily="@font/gotham_medium"
                        android:padding="8dp"
                        android:text="@string/lpg"
                        android:textColor="#757575" />

                    <RadioButton
                        android:id="@+id/electricity2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton"
                        android:fontFamily="@font/gotham_medium"
                        android:padding="8dp"
                        android:text="@string/electricity"
                        android:textColor="#757575" />
                </RadioGroup>

                <TextView
                    android:id="@+id/textView_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioGroup_fuelSecondary"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="@string/kilometer"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#161616" />

                <EditText
                    android:id="@+id/editText_km"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_km"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/gotham_medium"
                    android:gravity="center"
                    android:inputType="numberSigned|numberDecimal"
                    android:shadowColor="#3A3A3A"
                    android:textColor="#3A3A3A" />

                <TextView
                    android:id="@+id/textView_plate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editText_km"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="@string/plate_no"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#161616" />

                <EditText
                    android:id="@+id/editText_plate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_plate"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/gotham_medium"
                    android:gravity="center"
                    android:inputType="textCapCharacters"
                    android:shadowColor="#3A3A3A"
                    android:textAllCaps="true"
                    android:textColor="#3A3A3A" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/delete" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
