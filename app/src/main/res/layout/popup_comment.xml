<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/white_box"
    android:elevation="4dp"
    android:padding="4dp">

    <TextView
        android:id="@+id/popup_comment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:text="@string/add_comment"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#161616"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popup_comment_title"
        android:layout_margin="8dp"
        android:ems="10"
        android:hint="@string/add_comment"
        android:inputType="textMultiLine"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextComment"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:stepSize="1" />

    <ImageView
        android:id="@+id/imageViewCommentPic"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/ratingBar"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/icon_upload" />

    <Button
        android:id="@+id/buttonSendComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewCommentPic"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:background="@drawable/orange_box"
        android:padding="16dp"
        android:text="@string/add_comment"
        android:textColor="#f0f0f0" />

    <ImageView
        android:id="@+id/imageViewClose"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/cancel"
        app:srcCompat="@drawable/cancel" />

</RelativeLayout>