<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_profile"
    android:layout_width="match_parent"
    android:layout_height="285dp">

    <ImageView
        android:id="@+id/updateUserInfo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:contentDescription="@string/edit"
        app:srcCompat="@drawable/edit" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/default_profile" />

    <TextView
        android:id="@+id/userUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileImage"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/gotham_black"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#212121" />

    <RelativeLayout
        android:id="@+id/fuelSpotMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userUsername"
        android:gravity="center"
        android:padding="4dp">

        <TextView
            android:id="@+id/textViewFMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:fontFamily="@font/gotham_bold"
            android:textColor="#424242" />

    </RelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/buttonBars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fuelSpotMoney"
        android:padding="4dp">

        <Button
            android:id="@+id/button_fav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_layout_white"
            android:text="@string/favorites"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_marginPercent="1.33%"
            app:layout_widthPercent="32%" />

        <Button
            android:id="@+id/button_store"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/button_fav"
            android:background="@drawable/round_layout_white"
            android:text="@string/store"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="#212121"
            app:layout_marginPercent="1.33%"
            app:layout_widthPercent="32%" />

        <Button
            android:id="@+id/button_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/button_store"
            android:background="@drawable/round_layout_white"
            android:text="@string/help"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_marginPercent="1.34%"
            app:layout_widthPercent="32%" />

    </android.support.percent.PercentRelativeLayout>

</RelativeLayout>