<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reportPricesLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/white_box"
    android:padding="4dp">

    <TextView
        android:id="@+id/campaignPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/gotham_bold"
        android:gravity="center"
        android:text="@string/fab_report_price"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/campaignPhoto"
        android:layout_margin="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/gotham_book"
        android:gravity="center"
        android:text="@string/send_report_desc" />

    <RelativeLayout
        android:id="@+id/inner01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView23"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/round_layout2"
        android:gravity="center"
        android:padding="2dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/gasoline" />

        <EditText
            android:id="@+id/editTextGasoline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imageView2"
            android:ems="10"
            android:hint="@string/gasoline"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/editTextGasoline"
            android:layout_alignBottom="@+id/editTextGasoline"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/editTextGasoline"
            android:gravity="center"
            android:text="₺" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/inner02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inner01"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/round_layout2"
        android:gravity="center"
        android:padding="2dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/diesel" />

        <EditText
            android:id="@+id/editTextDiesel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imageView3"
            android:ems="10"
            android:hint="@string/diesel"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/editTextDiesel"
            android:layout_alignBottom="@+id/editTextDiesel"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/editTextDiesel"
            android:gravity="center"
            android:text="₺" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/inner03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inner02"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/round_layout2"
        android:gravity="center"
        android:padding="2dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/lpg" />

        <EditText
            android:id="@+id/editTextLPG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imageView4"
            android:ems="10"
            android:hint="@string/lpg"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/editTextLPG"
            android:layout_alignBottom="@+id/editTextLPG"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/editTextLPG"
            android:gravity="center"
            android:text="₺" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/inner04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inner03"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/round_layout2"
        android:gravity="center"
        android:padding="2dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/electricity" />

        <EditText
            android:id="@+id/editTextElectricity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imageView5"
            android:ems="10"
            android:hint="@string/electricity"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/editTextElectricity"
            android:layout_alignBottom="@+id/editTextElectricity"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/editTextElectricity"
            android:gravity="center"
            android:text="₺" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageViewPricesPhoto"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/inner04"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/photo_placeholder" />

    <Button
        android:id="@+id/sendFiyat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewPricesPhoto"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="#FF6838"
        android:text="@string/send_report"
        android:textColor="#f0f0f0" />

    <ImageView
        android:id="@+id/imageViewClose"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/cancel"
        android:padding="2dp"
        app:srcCompat="@drawable/cancel" />

</RelativeLayout>