<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reportPricesLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="#ffffff"
    android:padding="8dp">

    <TextView
        android:id="@+id/campaignPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:gravity="center"
        android:text="FİYATLARI BİLDİR"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/campaignPhoto"
        android:layout_margin="4dp"
        android:fontFamily="@font/gotham_book"
        android:gravity="center"
        android:text="Bu istasyondaki güncel fiyatları biliyorsan bize bildirerek diğer insanların da öğrenmesine yardımcı olabilirsin. Bildirimin değerlendirme sonucu doğrulanırsa hesabına bonus yüklenecek." />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@id/textView23"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/gasoline" />

    <EditText
        android:id="@+id/editTextGasoline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignBottom="@+id/editTextGasoline"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/editTextGasoline"
        android:gravity="center"
        android:text="TL" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/diesel" />

    <EditText
        android:id="@+id/editTextDiesel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignBottom="@+id/editTextDiesel"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/editTextGasoline"
        android:gravity="center"
        android:text="TL" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/lpg" />

    <EditText
        android:id="@+id/editTextLPG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignBottom="@+id/editTextLPG"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/editTextGasoline"
        android:gravity="center"
        android:text="TL" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/electricity" />

    <EditText
        android:id="@+id/editTextElectricity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignBottom="@+id/editTextElectricity"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/editTextGasoline"
        android:gravity="center"
        android:text="TL" />

    <ImageView
        android:id="@+id/imageViewPricesPhoto"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/photo_placeholder" />

    <Button
        android:id="@+id/sendFiyat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewPricesPhoto"
        android:layout_centerHorizontal="true"
        android:background="#FF6838"
        android:text="GÖNDER"
        android:textColor="#f0f0f0" />

    <ImageView
        android:id="@+id/imageViewClose"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="2dp"
        app:srcCompat="@drawable/cancel" />

</RelativeLayout>