<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/single_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/inner_banking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dummy0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/gotham_black"
                    android:gravity="center"
                    android:text="@string/process_type"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#161616"
                    app:layout_marginEndPercent="1%"
                    app:layout_marginStartPercent="1.5%"
                    app:layout_widthPercent="31%" />

                <TextView
                    android:id="@+id/dummy1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/dummy0"
                    android:fontFamily="@font/gotham_black"
                    android:gravity="center"
                    android:text="@string/amount"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#161616"
                    app:layout_marginEndPercent="1%"
                    app:layout_marginStartPercent="1%"
                    app:layout_widthPercent="31%" />

                <TextView
                    android:id="@+id/dummy2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/dummy1"
                    android:fontFamily="@font/gotham_bold"
                    android:gravity="center"
                    android:text="@string/date"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#161616"
                    app:layout_marginEndPercent="1.5%"
                    app:layout_marginStartPercent="1%"
                    app:layout_widthPercent="31%" />

            </androidx.percentlayout.widget.PercentRelativeLayout>

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:id="@+id/inner_banking2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/inner_banking">

                <TextView
                    android:id="@+id/banking_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#161616"
                    app:layout_marginEndPercent="1%"
                    app:layout_marginStartPercent="1.5%"
                    app:layout_widthPercent="31%" />

                <TextView
                    android:id="@+id/banking_amout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@id/banking_type"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#161616"
                    app:layout_marginEndPercent="1%"
                    app:layout_marginStartPercent="1%"
                    app:layout_widthPercent="31%" />

                <TextView
                    android:id="@+id/banking_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@id/banking_amout"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#161616"
                    app:layout_marginEndPercent="1.5%"
                    app:layout_marginStartPercent="1%"
                    app:layout_widthPercent="31%" />

            </androidx.percentlayout.widget.PercentRelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>