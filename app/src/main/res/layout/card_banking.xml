<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/round_layout_white2"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/single_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/tripBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/dummy0"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    app:layout_marginEndPercent="1%"
                    app:layout_marginStartPercent="1%"
                    app:layout_widthPercent="48%"
                    app:srcCompat="@drawable/icon_id" />

                <ImageView
                    android:id="@+id/dummy1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_toEndOf="@id/dummy0"
                    app:layout_marginEndPercent="1%"
                    app:layout_marginStartPercent="1%"
                    app:layout_widthPercent="48%"
                    app:srcCompat="@drawable/icon_reason" />

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/tripBar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripBar">

                <TextView
                    android:id="@+id/banking_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    app:layout_marginEndPercent="1%"
                    app:layout_marginStartPercent="1%"
                    app:layout_widthPercent="48%" />

                <TextView
                    android:id="@+id/banking_amout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/banking_type"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    app:layout_marginEndPercent="1%"
                    app:layout_marginStartPercent="1%"
                    app:layout_widthPercent="48%" />

            </android.support.percent.PercentRelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>