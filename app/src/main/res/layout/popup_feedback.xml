<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feedbackLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/white_box"
    android:elevation="4dp"
    android:padding="4dp">

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="@string/feedback"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/editTextFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView36"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:fontFamily="@font/gotham_book"
        android:hint="@string/add_message"
        android:inputType="textMultiLine"
        android:padding="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#161616" />

    <ImageView
        android:id="@+id/feedBackPhoto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/editTextFeedback"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/feedback"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/icon_upload" />

    <Button
        android:id="@+id/sendFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedBackPhoto"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:background="@drawable/orange_box"
        android:padding="16dp"
        android:text="@string/send_feedback"
        android:textColor="#f0f0f0" />

    <ImageView
        android:id="@+id/imageViewClose"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/cancel"
        android:padding="2dp"
        app:srcCompat="@drawable/cancel" />

</RelativeLayout>