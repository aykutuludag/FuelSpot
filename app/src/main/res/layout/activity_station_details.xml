<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:fitsSystemWindows="true"
    tools:context=".StationDetails">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/Appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/colorAccent"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="32dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <com.google.android.gms.maps.StreetViewPanoramaView
                android:id="@+id/street_view_panorama"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <ImageView
                android:id="@+id/imageViewErrStreetView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/error_general"
                android:visibility="gone" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/single_station"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EDEDED">

                <ImageView
                    android:id="@+id/station_photo"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/gasoline"
                    android:padding="4dp"
                    app:layout_widthPercent="12.5%"
                    app:srcCompat="@drawable/shell" />

                <TextView
                    android:id="@+id/station_name"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/station_photo"
                    android:layout_alignTop="@+id/station_photo"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/station_photo"
                    android:layout_toRightOf="@+id/station_photo"
                    android:gravity="center"
                    android:text="StationName"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_widthPercent="10%" />

                <TextView
                    android:id="@+id/station_vicinity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/station_photo"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Station Address"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#6D6D6D"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/gasoline"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@+id/station_name"
                    android:layout_toRightOf="@+id/station_name"
                    android:padding="5dp"
                    android:src="@drawable/gasoline"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="12sp"
                    app:layout_widthPercent="15.5%" />

                <TextView
                    android:id="@+id/taxGasoline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/station_photo"
                    android:layout_alignEnd="@+id/gasoline"
                    android:layout_alignRight="@+id/gasoline"
                    android:layout_below="@+id/gasoline"
                    android:layout_toEndOf="@+id/station_name"
                    android:layout_toRightOf="@+id/station_name"
                    android:gravity="center"
                    android:text="0.00 TL"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#6D6D6D"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/diesel"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@+id/gasoline"
                    android:layout_toRightOf="@+id/gasoline"
                    android:gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/diesel"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="12sp"
                    app:layout_widthPercent="15.5%" />

                <TextView
                    android:id="@+id/taxDiesel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/station_photo"
                    android:layout_alignEnd="@+id/diesel"
                    android:layout_alignRight="@+id/diesel"
                    android:layout_below="@+id/diesel"
                    android:layout_toEndOf="@+id/taxGasoline"
                    android:layout_toRightOf="@+id/taxGasoline"
                    android:gravity="center"
                    android:text="0.00 TL"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#6D6D6D"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/lpg"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@+id/diesel"
                    android:layout_toRightOf="@+id/diesel"
                    android:padding="5dp"
                    android:src="@drawable/lpg"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="12sp"
                    app:layout_widthPercent="15.5%" />

                <TextView
                    android:id="@+id/TaxLPG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/station_photo"
                    android:layout_alignEnd="@+id/lpg"
                    android:layout_alignRight="@+id/lpg"
                    android:layout_below="@+id/lpg"
                    android:layout_toEndOf="@+id/taxDiesel"
                    android:layout_toRightOf="@+id/taxDiesel"
                    android:gravity="center"
                    android:text="0.00 TL"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#6D6D6D"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />

                <ImageView
                    android:id="@+id/electricity"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@+id/lpg"
                    android:layout_toRightOf="@+id/lpg"
                    android:padding="5dp"
                    android:src="@drawable/electricity"
                    app:layout_widthPercent="15.5%" />

                <TextView
                    android:id="@+id/TaxElectricity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/station_photo"
                    android:layout_alignEnd="@+id/electricity"
                    android:layout_alignRight="@+id/electricity"
                    android:layout_below="@+id/electricity"
                    android:layout_toEndOf="@+id/TaxLPG"
                    android:layout_toRightOf="@+id/TaxLPG"
                    android:gravity="center"
                    android:text="0.00 TL"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#6D6D6D"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/distance"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@+id/electricity"
                    android:layout_toRightOf="@+id/electricity"
                    android:padding="5dp"
                    android:src="@drawable/distance"
                    app:layout_widthPercent="15.5%" />

                <TextView
                    android:id="@+id/distance_ofStation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/station_photo"
                    android:layout_alignEnd="@+id/distance"
                    android:layout_alignRight="@+id/distance"
                    android:layout_below="@+id/distance"
                    android:layout_toEndOf="@+id/TaxElectricity"
                    android:layout_toRightOf="@+id/TaxElectricity"
                    android:gravity="center"
                    android:text="0.00 km"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#6D6D6D"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.github.curioustechizen.ago.RelativeTimeTextView
                    android:id="@+id/lastUpdated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/gasoline"
                    android:alpha="@+id/gasoline"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="#6D6D6D" />
            </android.support.percent.PercentRelativeLayout>

            <RelativeLayout
                android:id="@+id/campaignSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/single_station">

                <TextView
                    android:id="@+id/title_campaigns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:text="Kampanyalar"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse" />

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/campaignBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_campaigns">

                    <ImageView
                        android:id="@+id/campaign1"
                        android:layout_height="wrap_content"
                        app:layout_marginPercent="4%"
                        app:layout_widthPercent="25%"
                        fab:srcCompat="@drawable/image_placeholder" />

                    <ImageView
                        android:id="@+id/campaign2"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/campaign1"
                        android:layout_toRightOf="@+id/campaign1"
                        app:layout_marginPercent="4%"
                        app:layout_widthPercent="25%"
                        fab:srcCompat="@drawable/image_placeholder" />

                    <ImageView
                        android:id="@+id/campaign3"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/campaign2"
                        android:layout_toRightOf="@+id/campaign2"
                        app:layout_marginPercent="4%"
                        app:layout_widthPercent="25%"
                        fab:srcCompat="@drawable/image_placeholder" />
                </android.support.percent.PercentRelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/commentSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/campaignSection">

                <TextView
                    android:id="@+id/title_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:text="Son yorumlar"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse" />

                <ImageView
                    android:id="@+id/errorPic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_comments"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/error_nocomment" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/commentView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_comments" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/material_design_android_floating_action_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_anchor="@+id/scrollView"
        app:layout_anchorGravity="right|bottom"
        app:menu_colorNormal="@color/colorAccent">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comment"
            fab:fab_label="Yorum yaz"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/go_icon"
            fab:fab_label="Ä°stasyona git"
            fab:fab_size="mini" />
    </com.github.clans.fab.FloatingActionMenu>
</android.support.design.widget.CoordinatorLayout>