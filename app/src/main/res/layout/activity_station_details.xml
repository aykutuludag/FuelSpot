<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    tools:context=".StationDetails">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/sokakgorunumu"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <WebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="350dp" />

                <ImageView
                    android:id="@+id/imageViewErrStreetView"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/error_general"
                    android:visibility="gone" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/sokakgorunumu"
                android:layout_marginTop="-36dp"
                android:background="@drawable/round_layout"
                android:elevation="8dp">

                <RelativeLayout
                    android:id="@+id/baseInfoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/station_ID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#161616" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/station_photo"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="16dp"
                        android:src="@drawable/default_station" />

                    <TextView
                        android:id="@+id/station_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/station_photo"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#161616" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/verifiedStation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/station_photo"
                        android:layout_alignBottom="@id/station_name"
                        android:layout_toEndOf="@id/station_name"
                        android:src="@drawable/verified"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/station_vicinity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/station_name"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/gotham_book"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                        android:textColor="#161616" />

                    <com.github.curioustechizen.ago.RelativeTimeTextView
                        android:id="@+id/stationLastUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/station_vicinity"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/gotham_book"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#161616"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:id="@+id/section_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/stationLastUpdate"
                        android:layout_centerHorizontal="true"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/stationPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="2dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#161616" />

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/stationPoint"
                            android:layout_alignBottom="@id/stationPoint"
                            android:layout_toEndOf="@id/stationPoint"
                            fab:srcCompat="@drawable/egikyildiz" />
                    </RelativeLayout>

                </RelativeLayout>

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/single_station"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/baseInfoLayout">

                    <ImageView
                        android:id="@+id/gasoline"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="8dp"
                        android:padding="4dp"
                        android:src="@drawable/gasoline"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        app:layout_marginStartPercent="10%"
                        app:layout_widthPercent="20%" />

                    <TextView
                        android:id="@+id/priceGasoline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gasoline"
                        android:layout_alignStart="@+id/gasoline"
                        android:layout_alignEnd="@+id/gasoline"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#161616" />

                    <ImageView
                        android:id="@+id/diesel"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@+id/gasoline"
                        android:gravity="center"
                        android:padding="4dp"
                        android:src="@drawable/diesel"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        app:layout_widthPercent="20%" />

                    <TextView
                        android:id="@+id/priceDiesel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/diesel"
                        android:layout_alignEnd="@+id/diesel"
                        android:layout_toEndOf="@+id/priceGasoline"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#161616" />

                    <ImageView
                        android:id="@+id/lpg"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@+id/diesel"
                        android:padding="4dp"
                        android:src="@drawable/lpg"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        app:layout_widthPercent="20%" />

                    <TextView
                        android:id="@+id/priceLPG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lpg"
                        android:layout_alignEnd="@+id/lpg"
                        android:layout_alignRight="@+id/lpg"
                        android:layout_toEndOf="@+id/priceDiesel"
                        android:layout_toRightOf="@+id/priceDiesel"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#161616"
                        tools:ignore="RtlHardcoded" />

                    <ImageView
                        android:id="@+id/electricity"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@+id/lpg"
                        android:padding="4dp"
                        android:src="@drawable/electricity"
                        app:layout_marginEndPercent="10%"
                        app:layout_widthPercent="20%" />

                    <TextView
                        android:id="@+id/priceElectricity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/electricity"
                        android:layout_alignEnd="@+id/electricity"
                        android:layout_toEndOf="@+id/priceLPG"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#161616" />

                    <TextView
                        android:id="@+id/textViewUnitPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/priceElectricity"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/gotham_book"
                        android:gravity="center"
                        android:text="@string/HundredDollarText"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#161616" />

                    <TextView
                        android:id="@+id/howMuchGasoline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewUnitPrice"
                        android:layout_alignStart="@id/gasoline"
                        android:layout_alignEnd="@+id/gasoline"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#161616" />

                    <TextView
                        android:id="@+id/howMuchDiesel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewUnitPrice"
                        android:layout_alignEnd="@+id/diesel"
                        android:layout_toEndOf="@+id/howMuchGasoline"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#161616" />

                    <TextView
                        android:id="@+id/howMuchLPG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewUnitPrice"
                        android:layout_alignEnd="@+id/lpg"
                        android:layout_alignRight="@+id/lpg"
                        android:layout_toEndOf="@+id/howMuchDiesel"
                        android:layout_toRightOf="@+id/howMuchDiesel"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#161616"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/howMuchElectricity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewUnitPrice"
                        android:layout_alignEnd="@+id/electricity"
                        android:layout_toEndOf="@+id/lpg"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#161616" />
                </android.support.percent.PercentRelativeLayout>

                <RelativeLayout
                    android:id="@+id/statsSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/single_station">

                    <TextView
                        android:id="@+id/title_stats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:text="@string/priceHistory"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#161616" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart"
                        android:layout_width="match_parent"
                        android:layout_height="225dp"
                        android:layout_below="@id/title_stats" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/facilitiesSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/statsSection">

                    <TextView
                        android:id="@+id/title_facilities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:text="@string/facilities"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#161616" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title_facilities"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:background="@drawable/round_layout_white"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:padding="4dp">

                        <android.support.percent.PercentRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/WC"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_alignParentStart="true"
                                android:alpha="0.5"
                                android:src="@drawable/wc"
                                app:layout_marginEndPercent="0.5%"
                                app:layout_marginStartPercent="0.5%"
                                app:layout_widthPercent="12.75%" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/Market"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_toEndOf="@id/WC"
                                android:alpha="0.5"
                                android:src="@drawable/market"
                                app:layout_marginEndPercent="0.75%"
                                app:layout_marginStartPercent="0.75%"
                                app:layout_widthPercent="12.75%" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/CarWash"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_toEndOf="@id/Market"
                                android:alpha="0.5"
                                android:src="@drawable/carwash"
                                app:layout_marginEndPercent="0.75%"
                                app:layout_marginStartPercent="0.75%"
                                app:layout_widthPercent="12.75%" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/TireRepair"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_toEndOf="@id/CarWash"
                                android:alpha="0.5"
                                android:src="@drawable/tirerepair"
                                app:layout_marginEndPercent="0.75%"
                                app:layout_marginStartPercent="0.75%"
                                app:layout_widthPercent="13%" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/Mechanic"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_toEndOf="@id/TireRepair"
                                android:alpha="0.5"
                                android:src="@drawable/mechanic"
                                app:layout_marginEndPercent="0.75%"
                                app:layout_marginStartPercent="0.75%"
                                app:layout_widthPercent="12.75%" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/Restaurant"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_toEndOf="@id/Mechanic"
                                android:alpha="0.5"
                                android:src="@drawable/restaurant"
                                app:layout_marginEndPercent="0.75%"
                                app:layout_marginStartPercent="0.75%"
                                app:layout_widthPercent="12.75%" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/ParkSpot"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_toEndOf="@id/Restaurant"
                                android:alpha="0.5"
                                android:src="@drawable/parkspot"
                                app:layout_marginEndPercent="0.75%"
                                app:layout_marginStartPercent="0.75%"
                                app:layout_widthPercent="12.75%" />
                        </android.support.percent.PercentRelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/campaignSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/facilitiesSection">

                    <TextView
                        android:id="@+id/title_campaigns"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="4dp"
                        android:text="@string/campaigns"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#161616" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/campaignView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_campaigns"
                        android:background="@android:color/transparent"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/noCampaignText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/campaignView"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="Bu istasyon henüz hiç kampanya eklememiş..."
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#161616"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/errorNoCampaign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/noCampaignText"
                        android:layout_margin="8dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/error_nocomment" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/commentSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/campaignSection">

                    <TextView
                        android:id="@+id/title_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:text="@string/comments"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#161616" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/commentView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_comments" />

                    <Button
                        android:id="@+id/button_seeAllComments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/commentView"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/green_box"
                        android:fontFamily="@font/gotham_black"
                        android:text="@string/see_all"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/noCommentText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title_comments"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:text="Bu istasyon için henüz hiç yorum yazılmamış..."
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#161616"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/errorNoComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/noCommentText"
                        android:layout_margin="8dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/error_nocomment" />

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/material_design_android_floating_action_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_anchor="@+id/scrollView"
        app:layout_anchorGravity="right|bottom"
        app:menu_colorNormal="#000000">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fab_comment"
            fab:fab_label="Yorum yaz"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_report_image"
            fab:fab_label="@string/fab_report_price"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_report_image"
            fab:fab_label="@string/fab_report"
            fab:fab_size="mini" />
    </com.github.clans.fab.FloatingActionMenu>
</android.support.design.widget.CoordinatorLayout>