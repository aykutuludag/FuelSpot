<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00801e">

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="KAMPANYA ADI"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse" />

    <EditText
        android:id="@+id/editTextCampaignName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView26"
        android:layout_margin="8dp"
        android:ems="10"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextCampaignName"
        android:layout_margin="8dp"
        android:text="KAMPANYA DETAYI"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse" />

    <EditText
        android:id="@+id/editTextCampaignDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView27"
        android:layout_margin="8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textColor="#fff" />

    <RelativeLayout
        android:id="@+id/timeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextCampaignDesc"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="BAŞLANGIÇ"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse" />

        <EditText
            android:id="@+id/editTextsTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="8dp"
            android:ems="5"
            android:focusable="false"
            android:inputType="none" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/editTextsTime"
            android:layout_alignBottom="@id/editTextsTime"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/gotham_bold"
            android:gravity="center"
            android:text="-"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="BİTİŞ"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse" />

        <EditText
            android:id="@+id/editTexteTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView29"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:ems="5"
            android:focusable="false"
            android:inputType="none" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeLayout"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:text="KAMPANYA RESMİ"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse" />

    <ImageView
        android:id="@+id/imageViewCampaignPhoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/textView25"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/default_campaign" />

    <Button
        android:id="@+id/buttonAddCampaign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewCampaignPhoto"
        android:layout_centerHorizontal="true"
        android:background="@drawable/green_box"
        android:text="TAMAMLA" />
</RelativeLayout>